:root {
    /* Color Palette - Professional Navy & Teal (Matching Reference) */
    --bg-gradient-start: #B8C6D4;
    --bg-gradient-mid: #A8B8C8;
    --bg-gradient-end: #98A8B8;
    --bg-white: #FFFFFF;
    --bg-card: rgba(255, 255, 255, 0.95);

    /* Navy Header */
    --header-dark: #2C3E50;
    --header-darker: #1A252F;

    /* Primary - Teal/Cyan */
    --primary: #1E6B7B;
    --primary-dark: #165661;
    --primary-light: #E8F4F6;
    --primary-glow: rgba(30, 107, 123, 0.3);

    /* Secondary - Red Accent */
    --secondary: #E74C3C;
    --secondary-light: #FFEBEE;
    --secondary-glow: rgba(231, 76, 60, 0.25);

    /* Accent - Light Gray */
    --accent: #7F8C8D;
    --accent-light: #ECF0F1;

    /* Text Colors */
    --text-main: #2C3E50;
    --text-secondary: #34495E;
    --text-muted: #7F8C8D;
    --text-light: #FFFFFF;

    /* Borders */
    --border-light: rgba(44, 62, 80, 0.1);
    --border-subtle: #D5DBDD;

    /* Glassmorphism - Light Mode */
    --glass-bg: rgba(255, 255, 255, 0.92);
    --glass-border: 1px solid rgba(44, 62, 80, 0.15);
    --glass-shadow: 0 8px 32px 0 rgba(44, 62, 80, 0.12);
    --backdrop-blur: blur(20px);

    /* Spacing & Layout */
    --container-width: 1200px;
    --nav-height: 80px;
    --radius-lg: 24px;
    --radius-md: 16px;
    --radius-sm: 8px;

    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-smooth: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.7) 0%, rgba(255, 255, 255, 0.5) 100%),
        url('/static/images/ai_interview_background.png') center center / cover no-repeat fixed;
    color: var(--text-main);
    line-height: 1.6;
    overflow-x: hidden;
    min-height: 100vh;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-main);
}

a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition-fast);
}

ul {
    list-style: none;
}

/* Background Elements */
.fixed-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
}

.orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.08;
    animation: float 25s infinite ease-in-out;
}

.orb-1 {
    width: 500px;
    height: 500px;
    background: rgba(30, 107, 123, 0.4);
    top: -150px;
    left: -150px;
    animation-delay: 0s;
}

.orb-2 {
    width: 400px;
    height: 400px;
    background: rgba(231, 76, 60, 0.3);
    bottom: 10%;
    right: -100px;
    animation-delay: -8s;
}

.orb-3 {
    width: 350px;
    height: 350px;
    background: rgba(44, 62, 80, 0.2);
    top: 40%;
    left: 30%;
    opacity: 0.06;
    animation-delay: -15s;
}

.grid-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
        linear-gradient(rgba(44, 62, 80, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(44, 62, 80, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(circle at center, black 40%, transparent 85%);
}

/* Utilities */
.container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 20px;
}

.text-gradient {
    background: linear-gradient(135deg, var(--text-main) 0%, var(--primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.section {
    padding: 100px 0;
}

.section-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 60px;
    color: var(--text-main);
}

.page-header {
    padding: 160px 0 80px;
    text-align: center;
}

.page-header h1 {
    font-size: 4rem;
    margin-bottom: 20px;
}

.subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto;
}

/* Navigation - Dark Navy Header */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--nav-height);
    z-index: 1000;
    transition: var(--transition-smooth);
}

.glass-nav {
    background: var(--header-dark);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.nav-container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 20px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 700;
    font-size: 1.5rem;
    font-family: 'Outfit', sans-serif;
    color: var(--text-light);
}

.logo-icon {
    position: relative;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.pulse-ring {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    border-radius: 12px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    opacity: 0;
    animation: pulse-border 2s infinite;
}

.nav-links {
    display: flex;
    gap: 40px;
}

.nav-link {
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    position: relative;
    font-size: 0.95rem;
}

.nav-link:hover,
.nav-link.active {
    color: var(--text-light);
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--text-light);
    transition: var(--transition-fast);
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    border-radius: var(--radius-sm);
    font-weight: 600;
    font-family: 'Outfit', sans-serif;
    cursor: pointer;
    transition: var(--transition-smooth);
    position: relative;
    overflow: hidden;
    gap: 10px;
    border: none;
    font-size: 1rem;
}

.btn-primary {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 20px rgba(30, 107, 123, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    background: var(--primary-dark);
    box-shadow: 0 6px 30px rgba(30, 107, 123, 0.4);
}

.btn-outline {
    background: transparent;
    border: 2px solid rgba(44, 62, 80, 0.3);
    color: var(--text-main);
}

.btn-outline:hover {
    background: rgba(255, 255, 255, 0.9);
    border-color: rgba(44, 62, 80, 0.5);
}

.btn-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 60%);
    transform: rotate(45deg) translate(-100%, -100%);
    transition: 0.5s;
}

.btn:hover .btn-glow {
    transform: rotate(45deg) translate(100%, 100%);
}

.btn-lg {
    padding: 16px 40px;
    font-size: 1.1rem;
    border-radius: var(--radius-md);
}

.full-width {
    width: 100%;
}

/* Glass Panels */
.glass-panel {
    background: var(--glass-bg);
    backdrop-filter: var(--backdrop-blur);
    -webkit-backdrop-filter: var(--backdrop-blur);
    border: var(--glass-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--glass-shadow);
}

/* Hero Section */
.hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: var(--nav-height);
    position: relative;
}

.hero-content {
    text-align: center;
    width: 100%;
}

.hero-content h1 {
    font-size: 4.5rem;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
    color: var(--text-main);
    font-weight: 800;
}

.hero-subtitle {
    font-size: 1.3rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto 60px;
    line-height: 1.8;
}

.hero-cta-card {
    max-width: 800px;
    margin: 0 auto;
    padding: 45px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-align: left;
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 10px 50px rgba(44, 62, 80, 0.15);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
}

.cta-content h3 {
    font-size: 1.6rem;
    margin-bottom: 10px;
    color: var(--text-main);
}

.cta-content p {
    color: var(--text-muted);
    font-size: 1.05rem;
}

.cta-actions {
    display: flex;
    gap: 16px;
}

/* Features Grid */
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
}

.feature-card {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid var(--border-subtle);
    padding: 40px;
    border-radius: var(--radius-md);
    transition: var(--transition-smooth);
    box-shadow: 0 4px 20px rgba(44, 62, 80, 0.08);
    backdrop-filter: blur(10px);
}

.feature-card:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateY(-10px);
    border-color: var(--primary);
    box-shadow: 0 12px 40px rgba(30, 107, 123, 0.2);
}

.feature-card h3 {
    color: var(--text-main);
    margin-bottom: 12px;
    font-size: 1.4rem;
}

.feature-card p {
    color: var(--text-secondary);
    line-height: 1.7;
}

.feature-icon {
    font-size: 3rem;
    margin-bottom: 24px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* Feature Rows (Features Page) */
.feature-row {
    display: flex;
    align-items: center;
    gap: 60px;
    margin-bottom: 120px;
}

.feature-row.reverse {
    flex-direction: row-reverse;
}

.feature-text {
    flex: 1;
}

.feature-text h2 {
    color: var(--text-main);
    margin-bottom: 20px;
    font-size: 2.5rem;
}

.feature-text p {
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.8;
}

.feature-visual {
    flex: 1;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-light) 100%);
    border-radius: var(--radius-lg);
    box-shadow: 0 10px 40px rgba(30, 107, 123, 0.15);
}

.feature-icon-lg {
    font-size: 4rem;
    margin-bottom: 20px;
}

.feature-list {
    margin-top: 30px;
}

.feature-list li {
    margin-bottom: 12px;
    padding-left: 24px;
    position: relative;
    color: var(--text-secondary);
}

.feature-list li::before {
    content: 'âœ“';
    color: var(--primary);
    position: absolute;
    left: 0;
    font-size: 1.2rem;
    font-weight: 700;
}

/* Pricing */
.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    align-items: center;
}

.pricing-card {
    background: rgba(255, 255, 255, 0.95);
    border: 2px solid var(--border-subtle);
    padding: 40px;
    border-radius: var(--radius-lg);
    text-align: center;
    position: relative;
    transition: var(--transition-smooth);
    backdrop-filter: blur(10px);
}

.pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(44, 62, 80, 0.15);
}

.pricing-card.featured {
    background: linear-gradient(135deg, var(--primary-light) 0%, rgba(255, 255, 255, 0.95) 100%);
    border-color: var(--primary);
    transform: scale(1.05);
    z-index: 10;
    box-shadow: 0 12px 50px rgba(30, 107, 123, 0.25);
}

.popular-tag {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--primary);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 1px;
}

.pricing-card h3 {
    color: var(--text-main);
    margin-bottom: 10px;
    font-size: 1.6rem;
}

.price {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 20px 0 10px;
    font-family: 'Outfit', sans-serif;
    color: var(--primary);
}

.price span {
    font-size: 1rem;
    color: var(--text-muted);
    font-weight: 400;
}

.plan-desc {
    color: var(--text-muted);
    margin-bottom: 30px;
}

.features-list {
    text-align: left;
    margin-bottom: 40px;
}

.features-list li {
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--text-secondary);
}

.check {
    color: var(--primary);
    font-weight: bold;
}

.cross {
    color: var(--secondary);
}

.disabled {
    opacity: 0.5;
}

/* About Page */
.about-content {
    padding: 60px;
    text-align: center;
    margin-bottom: 80px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
}

.about-content h2 {
    color: var(--text-main);
    margin-bottom: 20px;
}

.about-content p {
    max-width: 800px;
    margin: 20px auto 40px;
    font-size: 1.2rem;
    color: var(--text-secondary);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-top: 60px;
    border-top: 1px solid var(--border-subtle);
    padding-top: 40px;
}

.stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--primary);
    font-family: 'Outfit', sans-serif;
}

.stat-label {
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
}

.timeline {
    position: relative;
    max-width: 800px;
    margin: 60px auto 0;
}

.timeline::before {
    content: '';
    position: absolute;
    top: 0;
    left: 24px;
    height: 100%;
    width: 2px;
    background: var(--border-subtle);
}

.timeline-item {
    display: flex;
    gap: 40px;
    margin-bottom: 60px;
    position: relative;
}

.timeline-marker {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: white;
    border: 3px solid var(--primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-family: 'Outfit', sans-serif;
    color: var(--primary);
    z-index: 1;
}

.timeline-content h3 {
    margin-bottom: 10px;
    color: var(--primary);
}

.timeline-content p {
    color: var(--text-secondary);
}

/* Resources */
.resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 30px;
}

.resource-card {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid var(--border-subtle);
    padding: 30px;
    border-radius: var(--radius-md);
    display: block;
    transition: var(--transition-smooth);
    backdrop-filter: blur(10px);
}

.resource-card:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(30, 107, 123, 0.15);
}

.resource-tag {
    display: inline-block;
    padding: 4px 12px;
    background: var(--primary-light);
    color: var(--primary);
    border-radius: 20px;
    font-size: 0.8rem;
    margin-bottom: 16px;
    font-weight: 600;
}

.resource-card h3 {
    margin-bottom: 12px;
    color: var(--text-main);
}

.resource-card p {
    color: var(--text-secondary);
    padding-bottom: 20px;
}

/* Dashboard */
.dashboard-header {
    margin-bottom: 40px;
}

.dashboard-header h1 {
    color: var(--text-main);
}

.dashboard-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 30px;
}

.config-panel {
    padding: 40px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
}

.config-panel h2 {
    color: var(--text-main);
    margin-bottom: 30px;
}

.input-group {
    margin-bottom: 30px;
}

.input-label {
    display: block;
    margin-bottom: 12px;
    font-weight: 600;
    color: var(--text-secondary);
}

.glass-input {
    width: 100%;
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid var(--border-subtle);
    padding: 16px;
    border-radius: var(--radius-sm);
    color: var(--text-main);
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    outline: none;
    transition: var(--transition-fast);
}

.glass-input:focus {
    border-color: var(--primary);
    background: white;
}

.file-upload-wrapper {
    position: relative;
}

.file-label {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 20px;
    background: var(--primary-light);
    border: 2px dashed var(--primary);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: var(--transition-fast);
    color: var(--primary);
}

.file-label:hover {
    border-color: var(--primary-dark);
    background: rgba(30, 107, 123, 0.15);
}

.file-name {
    margin-top: 10px;
    font-size: 0.9rem;
    color: var(--primary);
}

.stats-panel {
    padding: 30px;
    height: 100%;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
}

.stats-panel h3 {
    color: var(--text-main);
    margin-bottom: 20px;
}

.mini-stat {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-bottom: 1px solid var(--border-subtle);
}

.mini-stat .label {
    color: var(--text-secondary);
}

.mini-stat .value {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--primary);
}

.recent-activity {
    margin-top: 30px;
}

.recent-activity h4 {
    margin-bottom: 16px;
    font-size: 1rem;
    color: var(--text-secondary);
}

.empty-state {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-style: italic;
}

/* CTA Section */
.cta-section {
    background: linear-gradient(135deg, rgba(30, 107, 123, 0.08) 0%, rgba(231, 76, 60, 0.04) 100%);
    border-radius: var(--radius-lg);
    padding: 80px 0;
}

.cta-panel {
    text-align: center;
    padding: 60px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
}

.cta-panel h2 {
    color: var(--text-main);
    margin-bottom: 20px;
    font-size: 2.5rem;
}

.cta-panel p {
    color: var(--text-secondary);
    font-size: 1.2rem;
    margin-bottom: 30px;
}

/* Footer - Same as Header */
.footer {
    padding: 80px 0 40px;
    background: var(--header-dark);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 60px;
    margin-bottom: 60px;
}

.brand-col p {
    color: rgba(255, 255, 255, 0.7);
    margin: 20px 0;
    max-width: 300px;
}

.footer-logo {
    font-weight: 700;
    font-size: 1.5rem;
    font-family: 'Outfit', sans-serif;
    color: var(--text-light);
}

.footer-col h4 {
    margin-bottom: 24px;
    font-size: 1.1rem;
    color: var(--text-light);
}

.footer-links li {
    margin-bottom: 12px;
}

.footer-links a {
    color: rgba(255, 255, 255, 0.7);
}

.footer-links a:hover {
    color: var(--text-light);
}

.social-links {
    display: flex;
    gap: 16px;
}

.social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-fast);
    color: rgba(255, 255, 255, 0.8);
}

.social-link:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-3px);
}

.footer-bottom {
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
}

.legal-links {
    display: flex;
    gap: 24px;
}

.legal-links a {
    color: rgba(255, 255, 255, 0.6);
}

.legal-links a:hover {
    color: var(--text-light);
}

/* Fade-up Animation */
.fade-up {
    opacity: 0;
    animation: fadeUp 0.8s ease forwards;
}

.fade-up:nth-child(2) {
    animation-delay: 0.2s;
}

.fade-up:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes fadeUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Animations */
@keyframes float {

    0%,
    100% {
        transform: translate(0, 0);
    }

    25% {
        transform: translate(20px, 20px);
    }

    50% {
        transform: translate(-10px, 40px);
    }

    75% {
        transform: translate(-30px, 10px);
    }
}

@keyframes pulse-border {
    0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.8;
    }

    100% {
        transform: translate(-50%, -50%) scale(1.5);
        opacity: 0;
    }
}

/* Mobile Responsive */
.mobile-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 6px;
}

.mobile-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: white;
}

@media (max-width: 968px) {
    .hero-content h1 {
        font-size: 3.5rem;
    }

    .hero-cta-card {
        flex-direction: column;
        text-align: center;
        gap: 30px;
    }

    .cta-actions {
        flex-direction: column;
        width: 100%;
    }

    .cta-actions .btn {
        width: 100%;
    }

    .feature-row {
        flex-direction: column;
    }

    .feature-row.reverse {
        flex-direction: column;
    }

    .footer-grid {
        grid-template-columns: 1fr 1fr;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .dashboard-grid {
        grid-template-columns: 1fr;
    }

    .nav-links {
        display: none;
    }

    .mobile-toggle {
        display: flex;
    }
}

@media (max-width: 640px) {
    .hero-content h1 {
        font-size: 2.5rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
    }

    .section-title {
        font-size: 2rem;
    }

    .footer-grid {
        grid-template-columns: 1fr;
    }

    .footer-bottom {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }
}